{
    "name": "peppa-studio",
    "productName": "Peppa Studio",
    "version": "0.0.17",
    "description": "Peppa Studio",
    "author": "hwangzhiming",
    "scripts": {
        "ng": "ng",
        "ng:start": "ng serve",
        "ng:build": "ng build",
        "ng:test": "ng test",
        "ng:lint": "ng lint",
        "ng:e2e": "ng e2e",
        "electron:start:serve": "wait-on http-get://localhost:4200/ && electron . --serve",
        "electron:start": "npm run ng:build && electron .",
        "electron:build": "npm run ng:build && build -p always",
        "update:version": "npm version patch",
        "postinstall": "node ./icon-helper.js"
    },
    "private": true,
    "main": "index.js",
    "build": {
        "appId": "com.smart-teams.peppa-studio",
        "directories": {
            "output": "release/"
        },
        "files": [
            "**/*",
            "!**/*.ts",
            "!*.code-workspace",
            "!LICENSE.md",
            "!package.json",
            "!package-lock.json",
            "!src/",
            "!e2e/",
            "!hooks/",
            "!angular.json",
            "!_config.yml",
            "!karma.conf.js",
            "!tsconfig.json",
            "!tslint.json"
        ],
        "win": {
            "icon": "dist/peppa-studio/favicon.ico"
        },
        "publish": [
            {
                "provider": "generic",
                "url": "https://odgmpeppastudio.blob.core.windows.net/peppa-studio-releases"
            }
        ]
    },
    "engines": {
        "node": ">=10.9.0"
    },
    "dependencies": {
        "@angular/animations": "~8.1.0",
        "@angular/common": "~8.1.0",
        "@angular/compiler": "~8.1.0",
        "@angular/core": "~8.1.0",
        "@angular/forms": "~8.1.0",
        "@angular/platform-browser": "~8.1.0",
        "@angular/platform-browser-dynamic": "~8.1.0",
        "@angular/router": "~8.1.0",
        "ace-builds": "^1.4.6",
        "angular-split": "^3.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "electron-updater": "^4.0.14",
        "highlight.js": "^9.15.8",
        "lodash": "^4.17.15",
        "ng-zorro-antd": "^8.0.3",
        "ngx-highlightjs": "^3.0.3",
        "rxjs": "~6.4.0",
        "tslib": "^1.9.0",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.801.0",
        "@angular/cli": "~8.1.0",
        "@angular/compiler-cli": "~8.1.0",
        "@angular/language-service": "~8.1.0",
        "@electron-forge/cli": "6.0.0-beta.39",
        "@electron-forge/maker-deb": "6.0.0-beta.39",
        "@electron-forge/maker-rpm": "6.0.0-beta.39",
        "@electron-forge/maker-squirrel": "6.0.0-beta.39",
        "@electron-forge/maker-zip": "6.0.0-beta.39",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "^5.0.0",
        "electron": "15.5.5",
        "electron-builder": "^20.44.4",
        "electron-log": "^3.0.6",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.1.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.4.3",
        "wait-on": "^3.2.0"
    }
}
